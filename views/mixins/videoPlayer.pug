mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                span
                    span#currentTime 00:00:00
                    | / 
                    span#totalTime 00:00:00
                span#jsVolumButton
                    i.fas.fa-volume-up
                .videoPlayer__volume
                    input#jsVolume(type="range", min="0", max="1", step="0.01", value="0.5")
            .videoPlayer__column
                span#jsFullScreenButton
                    i.fas.fa-expand